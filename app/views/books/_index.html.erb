<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th>Tag</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book %></td>
        <td><%= book.body %></td>
        <td><%= link_to  search_path(word: book.category) do %>
        <%= book.category%><% end %>
        </td>




        <td id="favorite_buttons_<%= book.id %>">
        <%= render "favorites/favorite", book: book %>
        </td>
        <td id="star-rate<%= book.id%>"></>

    <script>
      $('#star-rate<%= book.id%>').raty({
        size      : 36,
        starOff   : '<%= asset_path('off.png') %>',
        starOn    : '<%= asset_path('on.png') %>',
        half      : false,
        readOnly: true,
        score: <%= book.star %>,
      });
    </script>
  </div>
         <td>コメント件数：<%= book.book_comments.count %></td>
      </tr>
    <% end %>
  </tbody>
</table>